@model C2CChat.Models.ChatMessage
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Index";
    
}

<h2>Index</h2>


<form data-bind="submit: createMessage">
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ChatMessage</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Message, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Message, new { @data_bind = "value: newMessageMessage" })
                @Html.ValidationMessageFor(model => model.Message)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RepliedBy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RepliedBy, new { @data_bind = "value: newMessageRepliedBy" })
                @Html.ValidationMessageFor(model => model.RepliedBy)
            </div>
        </div>

        
         @Html.TextBoxFor(model => model.ChatUserID )
       
        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Date, new { @data_bind = "value: newMessageDate" })
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<h2>Message</h2>
<table data-bind="template: { name: 'chatTemplate', foreach: message }, visible: message().length > 0">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
</table>

<script type="text/html" id="chatTemplate">
    <!--Data Template-->
    <tr>
        <td><input class="ui-corner-all" data-bind="value: message, valueUpdate: 'afterkeydown'" /></td>
        <td><input class="ui-corner-all" data-bind="value: repliedBy, valueUpdate: 'afterkeydown'" /></td>
        <td><input class="ui-corner-all" data-bind="value: chatUserID, valueUpdate: 'afterkeydown'" /></td>
        <td><input class="ui-button" type="button" href="#" data-bind="click: removeChatMessage" value="Delete" /></td>
    </tr>
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
<script src="/signalr/hubs" type="text/javascript"></script>
<script src="~/Scripts/knockout-3.3.0.js"></script>

<script src="~/Scripts/ChatManager.js"></script>
}
